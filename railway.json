{
  "$schema": "https://schema.railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "npm i -g pnpm@10.15.1 && PNPM_BIN=\"$(npm config get prefix)/bin/pnpm\" && \"$PNPM_BIN\" install --no-frozen-lockfile && \"$PNPM_BIN\" run build",
    "nixpacksPlan": {
      "providers": ["node"],
      "phases": {
        "setup": {
          "nixPkgs": ["nodejs_20", "mysql-client"]
        }
      }
    }
  },
  "deploy": {
    "startCommand": "npm run start:railway",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 300,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
